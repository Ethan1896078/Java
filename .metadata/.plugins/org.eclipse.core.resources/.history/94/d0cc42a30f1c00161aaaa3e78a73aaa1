package pers.ethan.thread;

public class ThreadCount {
	
	

	public static void main(String[] args) {
		class Countter{
			int count = 0;
		}
		
		class CountRunnable1 implements Runnable{
			private Countter countter;

			public void run() {
				while (countter.count % 2 == 0 && countter.count <= 100) {
					System.out.println(Thread.currentThread().getName() + " -> " + countter.count);
				}
			}
			
		}
		
		class CountRunnable2 implements Runnable{
			private Countter countter;

			public void run() {
				while (countter.count % 2 == 1 && countter.count <= 100) {
					System.out.println(Thread.currentThread().getName() + " -> " + countter.count);
				}
			}
			
		}
		
		Countter countter = new Countter();
		new Thread(new CountRunnable1());
	}
	
}
